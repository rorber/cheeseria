{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "@cheeseria/domain/src/*": ["../../packages/domain/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/*.stories.tsx"]
}
